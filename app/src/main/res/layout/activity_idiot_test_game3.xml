<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdiotTestGame3"
    android:background="@drawable/immers_bg">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/idiotest_2"
        tools:layout_editor_absoluteY="115dp" />

    <ImageView
        android:id="@+id/letterB"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="325dp"
        android:onClick="RightAnswer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/letterb"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/letterD"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="290dp"
        android:onClick="WrongAnswer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/letterd"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letterE"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="350dp"
        android:onClick="WrongAnswer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lettere"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letterO"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="240dp"
        android:onClick="WrongAnswer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lettero"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letterR"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="270dp"
        android:onClick="WrongAnswer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/letterr"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letterR2"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="53dp"
        android:onClick="WrongAnswer3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letterr2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/timer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/agencyb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>