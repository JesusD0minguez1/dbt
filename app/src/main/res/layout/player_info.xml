<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerInfo">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gamebg" />

    <TextView
        android:id="@+id/ttplayerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="none"
        android:autoText="false"
        android:elegantTextHeight="true"
        android:fontFamily="@font/agencyb"
        android:rotationX="10"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="3"
        android:text="Welcome to our Game!"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <View
        android:id="@+id/underLineWelcome"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="143dp" />

    <MultiAutoCompleteTextView
        android:id="@+id/gameInfoTxt"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:clickable="false"
        android:editable="false"
        android:elegantTextHeight="true"
        android:fontFamily="@font/agencyb"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="3.0"
        android:text="Enter your name, then click a game!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <ImageView
        android:id="@+id/settings1"
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:clickable="true"
        android:onClick="settings"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/memGameIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameInfoTxt"
        app:srcCompat="@drawable/mem_game_icon" />

    <ImageView
        android:id="@+id/simonGameIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/memGameIcon"
        app:layout_constraintTop_toBottomOf="@+id/gameInfoTxt"
        app:srcCompat="@drawable/simon_game_icon" />

    <ImageView
        android:id="@+id/highScoresIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triviaGameIcon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/high_scores" />

    <ImageView
        android:id="@+id/triviaGameIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memGameIcon"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/trivia_game_icon" />

    <ImageView
        android:id="@+id/pingPongGameIcon"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/highScoresIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/triviaGameIcon"
        app:layout_constraintTop_toBottomOf="@+id/simonGameIcon"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ping_pong" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/agencyb"
        android:hint="Name Here"
        android:inputType="textPersonName"
        android:maxLength="24"
        android:shadowColor="#000000"
        android:shadowDx="1.6"
        android:shadowDy="1.3"
        android:shadowRadius="1.5"
        android:text="Debug Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/memGameIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameInfoTxt"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>