<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdiotTestGame1"
    android:background="@drawable/immers_bg">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/idiotest_2background"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/arts"
        android:layout_width="91dp"
        android:layout_height="56dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="295dp"
        android:onClick="WrongAnswer"
        app:layout_constraintEnd_toStartOf="@+id/wedding"
        app:layout_constraintStart_toEndOf="@+id/kungfu"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@drawable/artsupplies"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/karate"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="283dp"
        android:onClick="WrongAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/karate"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/kungfu"
        android:layout_width="110dp"
        android:layout_height="78dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:onClick="WrongAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474"
        app:srcCompat="@drawable/kungfu"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/wedding"
        android:layout_width="92dp"
        android:layout_height="67dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="317dp"
        android:onClick="RightAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wedding"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/agencyb"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>