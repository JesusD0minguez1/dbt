<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoryGame">

    <ImageView
        android:id="@+id/bgMem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gamebg" />

    <TextView
        android:id="@+id/memoryInfoText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/agencyb"
        android:shadowColor="#000000"
        android:shadowDx="1.6"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Remember where the shapes are!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMemGame" />

    <TextView
        android:id="@+id/titleMemGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/agencyb"
        android:rotation="-2"
        android:rotationX="-10"
        android:rotationY="-2"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Can you Remember?"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/underLineMem"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="106dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMemGame" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/agencyb"
        android:inputType="number"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Score"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/card2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        app:layout_constraintVertical_bias="0.936" />

    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/agencyb"
        android:inputType="number"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Timer"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/card0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText" />

    <ImageView
        android:id="@+id/card0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintBottom_toTopOf="@+id/card3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/card1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/card4"
        app:layout_constraintEnd_toStartOf="@+id/card2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/card0"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="271dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/card5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="271dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/card4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="16dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/card5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/card3"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/card5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="40dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText"
        tools:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/settingsMem"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="1dp"
        android:onClick="settingsMem"
        app:layout_constraintBottom_toTopOf="@+id/titleMemGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <Button
        android:id="@+id/nxtBtnMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agencyb"
        android:onClick="nextActivityMemory"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="next"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card4" />

    <Button
        android:id="@+id/startButtonMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/agencyb"
        android:onClick="onStartBtnClick"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="Start"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/card1"
        app:layout_constraintEnd_toStartOf="@+id/scoreView"
        app:layout_constraintStart_toEndOf="@+id/timerView"
        app:layout_constraintTop_toBottomOf="@+id/memoryInfoText" />

</androidx.constraintlayout.widget.ConstraintLayout>