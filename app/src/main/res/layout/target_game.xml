<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgTargetGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/immers_bg" />

    <Button
        android:id="@+id/returnBtnTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="340dp"
        android:fontFamily="@font/agencyb"
        android:rotationX="10"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="return"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/settingsTarg"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="673dp"
        android:rotationX="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/position1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="267dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toStartOf="@+id/position3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/position1"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="45dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="265dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position1"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toStartOf="@+id/position6"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/position4"
        app:layout_constraintTop_toBottomOf="@+id/position2"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="262dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="45dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position3"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="128dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position4"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintEnd_toStartOf="@+id/position9"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toEndOf="@+id/position7"
        app:layout_constraintTop_toBottomOf="@+id/position5"
        tools:srcCompat="@drawable/bad_target" />

    <ImageView
        android:id="@+id/position9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="265dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="128dp"
        android:clickable="true"
        android:contextClickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position6"
        tools:srcCompat="@drawable/bad_target" />

    <TextView
        android:id="@+id/tTimerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="284dp"
        android:fontFamily="@font/agencyb"
        android:inputType="number"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Timer : 10"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt" />

    <Button
        android:id="@+id/startButtonTarg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/agencyb"
        android:onClick="onStartClick"
        android:rotationX="10"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:soundEffectsEnabled="false"
        android:text="Start"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tScoreView"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/tTimerView"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt" />

    <TextView
        android:id="@+id/tScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="285dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/agencyb"
        android:inputType="number"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Score : 0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetInfoTxt" />

    <TextView
        android:id="@+id/targetInfoTxt"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/agencyb"
        android:rotationX="10"
        android:shadowColor="#000000"
        android:shadowDx="1.6"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Click as many green targets as you can before the timer runs out!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/underLineTitleTarget" />

    <View
        android:id="@+id/underLineTitleTarget"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="106dp"
        android:background="#ffffff"
        android:rotationX="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetGameTitle" />

    <TextView
        android:id="@+id/targetGameTitle"
        android:layout_width="341dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:autoSizeTextType="none"
        android:autoText="false"
        android:elegantTextHeight="true"
        android:fontFamily="@font/agencyb"
        android:rotationX="10"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="3"
        android:text="Break the Targets!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />
</androidx.constraintlayout.widget.ConstraintLayout>