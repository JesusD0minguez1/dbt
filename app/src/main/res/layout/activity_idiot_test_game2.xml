<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdiotTestGame2"
    android:background="@drawable/immers_bg">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/idiotest_6"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/almond"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="38dp"
        android:onClick="RightAnswer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/almond3"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/alien"
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="190dp"
        android:onClick="WrongAnswer2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/alien2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/magician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="195dp"
        android:onClick="WrongAnswer2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/magician2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/strawberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="250dp"
        android:onClick="WrongAnswer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/strawberry2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/timer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="184dp"
        android:textSize="36dp"
        android:textStyle="bold"
        android:fontFamily="@font/agencyb"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>